.CHAR_ADDR
!byte $00, $00
.TEMP_X
!byte $00
.TEMP_Y
!byte $00
.FONT_PTR_REVERSE
!byte $00, $00
.FONT_PTR
!byte $00, $00
; --------------------------------------------------
; setCharData changes a character in RAM and sets also its reverse
; 
; INPUT: screen code of character to change in x, font 0 or 1 in y
;        .FONT_PTR1 set to address of new character data
; OUTPUT: None
; --------------------------------------------------
setCharData
    stx .TEMP_X
    sty .TEMP_Y
    cpy #1
    beq .setFont1
    +load16BitImmediate .FONT0_BASE, .FONT_PTR
    +load16BitImmediate .FONT0_BASE_REVERSE, .FONT_PTR_REVERSE
    jmp .startChangeData
.setFont1
    +load16BitImmediate .FONT1_BASE, .FONT_PTR
    +load16BitImmediate .FONT1_BASE_REVERSE, .FONT_PTR_REVERSE

.startChangeData
    stx .CHAR_ADDR
    ldx #0
    stx .CHAR_ADDR + 1
    ; multiply by 8
    +double16Bit .CHAR_ADDR
    +double16Bit .CHAR_ADDR
    +double16Bit .CHAR_ADDR

    +add16Bit .CHAR_ADDR, .FONT_PTR
    +add16Bit .CHAR_ADDR, .FONT_PTR_REVERSE
    ldy #0
.copyChar
    +move16Bit .FONT_PTR, .FONT_PTR2
    lda (.FONT_PTR1),Y
    sta (.FONT_PTR2),Y
    eor #$FF
    tax 
    +move16Bit .FONT_PTR_REVERSE, .FONT_PTR2
    txa
    sta (.FONT_PTR2), y
    iny
    cpy #08
    bne .copyChar

    ; do not use up stack space
    ldx .TEMP_X
    ldy .TEMP_Y

    rts

